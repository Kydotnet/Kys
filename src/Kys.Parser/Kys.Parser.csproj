<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version>1.0</Version>
    <NoWarn>$(NoWarn);CS3021;CS1584;CS1658</NoWarn>
    <DocumentationFile>Kys.Parser.xml</DocumentationFile>
    <TargetFramework>netstandard2.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Antlr4.Runtime.Standard" Version="4.9.2" />
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="java -jar &quot;$(SolutionDir)build-tools/antlr4.jar&quot; -Dlanguage=CSharp KysParser.g4 KysLexer.g4 -no-listener -visitor -package Kys.Parser" />
  </Target>

</Project>
